@page "/courses"
@using OnlineTrainingHybridApp.Shared.Models
@inject HttpClient Http
@inject IJSRuntime JS
@inject NavigationManager NavManager

<h3 class="mt-4 mb-3 text-primary">Courses Management</h3>

<div class="mb-3 d-flex justify-content-between align-items-center">
    <div class="d-flex gap-2 w-75">
        <input class="form-control w-50"
               placeholder="Search course..."
               value="@searchTerm"
               @oninput="OnSearchInput" />
        <button class="btn btn-outline-secondary" @onclick="GoHome">🏠 Home</button>
    </div>
    <button class="btn btn-primary" @onclick="ShowAddForm">+ Add Course</button>
</div>

@if (courses == null)
{
    <p>⏳ Loading courses...</p>
}
else
{
    @if (filteredCourses.Any())
    {
        <table class="table table-striped table-bordered">
            <thead class="table-light">
                <tr>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Duration</th>
                    <th>Level</th>
                    <th>Trainer</th>
                    <th style="width:180px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var c in filteredCourses)
                {
                    <tr>
                        <td>@c.Title</td>
                        <td>@c.Description</td>
                        <td>@c.Duration hour(s)</td>
                        <td>@c.Level</td>
                        <td>@c.TrainerName</td>
                        <td>
                            <button class="btn btn-warning btn-sm me-2" @onclick="() => Edit(c)">Edit</button>
                            <button class="btn btn-danger btn-sm" @onclick="() => Delete(c.CourseId)">Delete</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-muted text-center">No courses found for "@searchTerm".</p>
    }
}

@if (showForm)
{
    <div class="card p-4 mt-3">
        <h5>@(isEdit ? "Edit Course" : "Add Course")</h5>

        <div class="mb-3">
            <label>Title</label>
            <input class="form-control" @bind="courseForm.Title" />
        </div>

        <div class="mb-3">
            <label>Description</label>
            <textarea class="form-control" @bind="courseForm.Description"></textarea>
        </div>

        <div class="mb-3">
            <label>Duration (hours)</label>
            <input type="number" class="form-control" @bind="courseForm.Duration" />
        </div>

        <div class="mb-3">
            <label>Level</label>
            <select class="form-select" @bind="courseForm.Level">
                <option>Beginner</option>
                <option>Intermediate</option>
                <option>Advanced</option>
            </select>
        </div>

        <div class="mb-3">
            <label>Trainer</label>
            <select class="form-select" @bind="courseForm.TrainerId">
                <option value="">-- Select Trainer --</option>
                @foreach (var t in trainers)
                {
                    <option value="@t.TrainerId">@t.Name</option>
                }
            </select>
        </div>

        <button class="btn btn-success me-2" @onclick="SaveCourse">Save</button>
        <button class="btn btn-secondary" @onclick="CancelForm">Cancel</button>
    </div>
}

@code {
    private List<CourseDTO>? courses;
    private List<CourseDTO> filteredCourses = new();
    private List<TrainerDTO> trainers = new();
    private string searchTerm = string.Empty;

    private bool showForm = false;
    private bool isEdit = false;
    private CourseDTO courseForm = new();
    private System.Timers.Timer? searchTimer;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        try
        {
            courses = await Http.GetFromJsonAsync<List<CourseDTO>>("https://localhost:7093/api/courses");
            trainers = await Http.GetFromJsonAsync<List<TrainerDTO>>("https://localhost:7093/api/trainers");
            filteredCourses = courses ?? new();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"❌ Error loading data: {ex.Message}");
        }
    }

    // 🔍 Real-time search with debounce (300ms)
    private void OnSearchInput(ChangeEventArgs e)
    {
        searchTerm = e.Value?.ToString() ?? string.Empty;

        searchTimer?.Stop();
        searchTimer = new System.Timers.Timer(300);
        searchTimer.Elapsed += async (_, _) =>
        {
            searchTimer?.Stop();
            await InvokeAsync(FilterCourses);
        };
        searchTimer.Start();
    }

    private void FilterCourses()
    {
        if (string.IsNullOrWhiteSpace(searchTerm))
        {
            filteredCourses = courses ?? new();
        }
        else
        {
            filteredCourses = courses!
                .Where(c =>
                    (c.Title?.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ?? false) ||
                    (c.Description?.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ?? false) ||
                    (c.Level?.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ?? false) ||
                    (c.TrainerName?.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ?? false))
                .ToList();
        }

        InvokeAsync(StateHasChanged);
    }

    private void ShowAddForm()
    {
        courseForm = new CourseDTO();
        isEdit = false;
        showForm = true;
    }

    private void Edit(CourseDTO c)
    {
        courseForm = new CourseDTO
        {
            CourseId = c.CourseId,
            Title = c.Title,
            Description = c.Description,
            Duration = c.Duration,
            Level = c.Level,
            TrainerId = c.TrainerId
        };
        isEdit = true;
        showForm = true;
    }

    private void CancelForm() => showForm = false;

    private async Task SaveCourse()
    {
        if (string.IsNullOrWhiteSpace(courseForm.Title))
        {
            await JS.InvokeVoidAsync("alert", "Please fill in the course title.");
            return;
        }

        if (isEdit)
            await Http.PutAsJsonAsync($"https://localhost:7093/api/courses/{courseForm.CourseId}", courseForm);
        else
            await Http.PostAsJsonAsync("https://localhost:7093/api/courses", courseForm);

        showForm = false;
        await LoadData();
    }

    private async Task Delete(int id)
    {
        var confirm = await JS.InvokeAsync<bool>("confirm", "Are you sure you want to delete this course?");
        if (confirm)
        {
            await Http.DeleteAsync($"https://localhost:7093/api/courses/{id}");
            await LoadData();
        }
    }

    private void GoHome()
    {
        NavManager.NavigateTo("/");
    }
}

@page "/trainers"
@using OnlineTrainingHybridApp.Shared.DTOs
@using Microsoft.AspNetCore.Components.Forms
@using OnlineTrainingHybridApp.Shared.Services
@inject HttpClient Http
@inject IJSRuntime JS
@inject NavigationManager NavManager
@inject IPhotoService PhotoService

<h3 class="mt-4 mb-3 text-success">Trainers Management</h3>

<div class="mb-3 d-flex justify-content-between align-items-center">
    <div class="d-flex gap-2 w-75">
        <input class="form-control w-50" placeholder="Search trainer..."
               @bind="SearchTerm" @bind:event="oninput" />
        <button class="btn btn-outline-secondary" @onclick="GoHome">🏠 Home</button>
    </div>
    <button class="btn btn-success" @onclick="ShowAddForm">+ Add Trainer</button>
</div>

@if (trainers == null)
{
    <p>⏳ Loading trainers...</p>
}
else
{
    <table class="table table-striped table-bordered">
        <thead class="table-light">
            <tr>
                <th>Photo</th>
                <th>Name</th>
                <th>Contact</th>
                <th>Total Courses</th>
                <th style="width:180px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var t in filteredTrainers)
            {
                <tr>
                    <td>
                        @if (!string.IsNullOrEmpty(t.PhotoUrl))
                        {
                            <img src="@t.PhotoUrl" alt="@t.Name" width="70" height="70" class="rounded-circle" />
                        }
                        else
                        {
                            <span class="text-muted fst-italic">No photo</span>
                        }
                    </td>
                    <td>@t.Name</td>
                    <td>@t.ContactNumber</td>
                    <td>@t.TotalCourses</td>
                    <td>
                        <button class="btn btn-warning btn-sm me-2" @onclick="() => Edit(t)">Edit</button>
                        <button class="btn btn-danger btn-sm" @onclick="() => Delete(t.TrainerId)">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@if (showForm)
{
    <div class="card p-4 mt-3 shadow-sm">
        <h5>@(isEdit ? "Edit Trainer" : "Add Trainer")</h5>

        <div class="mb-3">
            <label>Name</label>
            <input class="form-control" @bind="trainerForm.Name" />
        </div>

        <div class="mb-3">
            <label>Contact Number</label>
            <input class="form-control" @bind="trainerForm.ContactNumber" />
        </div>

        <div class="mb-3">
            <label>Profile Photo</label>

            <!-- 📁 Upload file dari laptop -->
            <InputFile OnChange="OnFileSelected"
                       class="form-control mb-2"
                       accept="image/*" />

            <!-- 📷 Ambil foto dengan kamera (MediaPicker MAUI) -->
            <button type="button"
                    class="btn btn-outline-primary btn-sm mb-2"
                    @onclick="CaptureWithMauiCamera">
                📷 Take Photo
            </button>

            @if (!string.IsNullOrEmpty(previewImageUrl))
            {
                <div class="mt-2">
                    <span><b>Preview:</b></span><br />
                    <img src="@previewImageUrl" alt="Preview" width="120"
                         class="mt-1 rounded shadow-sm" />
                </div>
            }
        </div>

        <button class="btn btn-success me-2" @onclick="SaveTrainer">Save</button>
        <button class="btn btn-secondary" @onclick="CancelForm">Cancel</button>
    </div>
}

@code {
    private List<TrainerDTO>? trainers;
    private List<TrainerDTO> filteredTrainers = new();
    private string searchTerm = string.Empty;

    private bool showForm = false;
    private bool isEdit = false;
    private TrainerDTO trainerForm = new();

    // Upload-related
    private IBrowserFile? selectedFile;
    private string? previewImageUrl;

    // Real-time search property
    private string SearchTerm
    {
        get => searchTerm;
        set
        {
            searchTerm = value;
            FilterTrainers();
        }
    }

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        try
        {
            trainers = await Http.GetFromJsonAsync<List<TrainerDTO>>("https://localhost:7093/api/trainers");
            filteredTrainers = trainers ?? new();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"❌ Error loading data: {ex.Message}");
        }
    }

    private void ShowAddForm()
    {
        trainerForm = new TrainerDTO();
        previewImageUrl = null;
        isEdit = false;
        showForm = true;
    }

    private void Edit(TrainerDTO t)
    {
        trainerForm = new TrainerDTO
        {
            TrainerId = t.TrainerId,
            Name = t.Name,
            ContactNumber = t.ContactNumber,
            TotalCourses = t.TotalCourses,
            PhotoUrl = t.PhotoUrl
        };
        previewImageUrl = t.PhotoUrl;
        isEdit = true;
        showForm = true;
    }

    private void CancelForm() => showForm = false;

    /// <summary>
    /// Upload file gambar dari laptop (InputFile) ke API /api/Main/uploadfile
    /// </summary>
    private async Task OnFileSelected(InputFileChangeEventArgs e)
    {
        selectedFile = e.File;
        if (selectedFile == null) return;

        using var content = new MultipartFormDataContent();
        var stream = selectedFile.OpenReadStream(maxAllowedSize: 10_000_000);

        // nama field HARUS "file" untuk cocok dengan IFormFile file di MainController
        content.Add(new StreamContent(stream), "file", selectedFile.Name);

        var response = await Http.PostAsync("https://localhost:7093/api/Main/uploadfile", content);

        if (response.IsSuccessStatusCode)
        {
            var result = await response.Content.ReadFromJsonAsync<UploadResult>();
            trainerForm.PhotoUrl = result?.Url;
            previewImageUrl = result?.Url;
        }
        else
        {
            var errorText = await response.Content.ReadAsStringAsync();
            await JS.InvokeVoidAsync("alert",
                $"Failed to upload image!\n{(int)response.StatusCode} {response.StatusCode}\n{errorText}");
        }
    }

    /// <summary>
    /// Ambil foto via kamera (MediaPicker MAUI) dan upload ke API, lalu set PhotoUrl.
    /// </summary>
    private async Task CaptureWithMauiCamera()
    {
        // endpoint upload di backend
        var uploadUrl = "https://localhost:7093/api/Main/uploadfile";

        var url = await PhotoService.CaptureAndUploadPhotoAsync(uploadUrl);

        if (!string.IsNullOrEmpty(url))
        {
            trainerForm.PhotoUrl = url;
            previewImageUrl = url;
            StateHasChanged();
        }
    }

    private async Task SaveTrainer()
    {
        if (string.IsNullOrWhiteSpace(trainerForm.Name))
        {
            await JS.InvokeVoidAsync("alert", "Please enter the trainer's name.");
            return;
        }

        if (isEdit)
            await Http.PutAsJsonAsync($"https://localhost:7093/api/trainers/{trainerForm.TrainerId}", trainerForm);
        else
            await Http.PostAsJsonAsync("https://localhost:7093/api/trainers", trainerForm);

        showForm = false;
        await LoadData();
    }

    private async Task Delete(int id)
    {
        var confirm = await JS.InvokeAsync<bool>("confirm", "Are you sure you want to delete this trainer?");
        if (confirm)
        {
            await Http.DeleteAsync($"https://localhost:7093/api/trainers/{id}");
            await LoadData();
        }
    }

    private void FilterTrainers()
    {
        if (string.IsNullOrWhiteSpace(searchTerm))
        {
            filteredTrainers = trainers ?? new();
        }
        else
        {
            filteredTrainers = trainers!
                .Where(t =>
                    t.Name.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ||
                    t.ContactNumber.Contains(searchTerm, StringComparison.OrdinalIgnoreCase))
                .ToList();
        }
    }

    private void GoHome()
    {
        NavManager.NavigateTo("/");
    }

    // Upload result DTO (sesuai response { url = "..." })
    public class UploadResult
    {
        public string? FileName { get; set; }
        public string? Url { get; set; }
    }
}
